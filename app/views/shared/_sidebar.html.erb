<div class="sidebar bg-dark text-light vh-100">
  <!-- Perfil do Usuário -->
  <div class="sidebar-profile text-center py-4">
    <% if user_signed_in? %>
      <%= image_tag(current_user.photo.url, alt: "Profile Picture", class: "rounded-circle border border-secondary", width: "80", height: "80") if current_user.photo.present? %>
      <h6 class="mt-3 mb-1"><%= current_user.name %></h6>
      <p class="text-muted mb-3">Administrator</p>
    <% else %>
      <p class="text-muted mb-3">Not logged in</p>
    <% end %>
  </div>

  <!-- Navegação -->
  <ul class="nav flex-column text-start px-3">
    <li class="nav-item mt-3">
      <%= link_to home_path, class: "nav-link text-light d-flex align-items-center" do %>
        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to analytics_path, class: "nav-link text-light d-flex align-items-center" do %>
        <i class="fas fa-chart-bar me-2"></i> Analytics
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to fields_path, class: "nav-link text-light d-flex align-items-center" do %>
        <i class="fas fa-seedling me-2"></i> Fields
      <% end %>
    </li>

    <% if current_user&.admin? %>
      <li class="nav-item mt-4 border-top pt-3">
        <%= link_to users_path, class: "nav-link text-light d-flex align-items-center" do %>
          <i class="fas fa-users-cog me-2"></i> Gerenciar Usuários
        <% end %>
      </li>
    <% end %>
  </ul>

  <!-- Logout -->
  <div class="text-center mt-auto py-3">
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-outline-light w-75" do %>
        <i class="fas fa-sign-out-alt me-2"></i> Logout
      <% end %>
    <% end %>
  </div>
</div>
