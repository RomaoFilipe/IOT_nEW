<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IoT Agricultural Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .card:hover {
            transform: translateY(-5px);
            transition: 0.3s ease;
        }
        .metric {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .section-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #28a745;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container py-5">
        <h1 class="text-center text-success fw-bold mb-5">Painel de Controle IoT Agrícola</h1>

        <!-- Métricas Principais -->
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-thermometer-sun text-primary" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Temperatura Atual</p>
                    <p class="metric text-primary">30°C</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-moisture text-info" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Umidade do Solo</p>
                    <p class="metric text-info">55%</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-brightness-high text-warning" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Luz Solar</p>
                    <p class="metric text-warning">450 lux</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-droplet-half text-success" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Status da Irrigação</p>
                    <p class="metric text-success">Ativo</p>
                </div>
            </div>
        </div>

        <!-- Controle de Dispositivos -->
        <h4 class="section-title mb-4">Controle de Dispositivos</h4>
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-droplet text-success" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Controle de Irrigação</p>
                    <button class="btn btn-primary mt-3">Ativar/Desativar</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-fan text-info" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Ventilação</p>
                    <button class="btn btn-primary mt-3">Ativar/Desativar</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center shadow-sm">
                    <i class="bi bi-lightbulb text-warning" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Iluminação</p>
                    <button class="btn btn-primary mt-3">Ativar/Desativar</button>
                </div>
            </div>
        </div>

        <!-- Gráficos e Alertas -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card p-4 shadow-sm">
                    <h5 class="section-title mb-3">Histórico de Temperatura</h5>
                    <canvas id="temperatureChart"></canvas>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-4 shadow-sm">
                    <h5 class="section-title mb-3">Alertas</h5>
                    <ul class="list-group">
                        <li class="list-group-item">Alta temperatura detectada</li>
                        <li class="list-group-item">Umidade abaixo do ideal</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Gráfico de exemplo
        const ctx = document.getElementById('temperatureChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Seg', 'Ter', 'Qua', 'Qui', 'Sex'],
                datasets: [{
                    label: 'Temperatura (°C)',
                    data: [30, 32, 28, 31, 29],
                    borderColor: '#28a745',
                    tension: 0.4,
                    fill: false,
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
</body>
</html>
