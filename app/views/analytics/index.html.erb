<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agriculture Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="styles.css"> <!-- Arquivo CSS personalizado -->
</head>
<body>

<div class="container mt-5">
    <h1 class="h3 mb-4">Dashboard</h1>

    <!-- Resumo e Alertas -->
    <div class="row g-3 mb-4">
        <!-- Estatísticas principais -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-white">
                <div class="card-body text-center">
                    <h6 class="card-title text-success">MÊS</h6>
                    <h2 class="card-value">47K</h2>
                    <p class="text-muted small">ÚLTIMO MÊS</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-white">
                <div class="card-body text-center">
                    <h6 class="card-title text-success">Total</h6>
                    <h2 class="card-value">58.4K</h2>
                    <p class="text-muted small">LEGUMES</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-white">
                <div class="card-body text-center">
                    <h6 class="card-title text-success">Share</h6>
                    <h2 class="card-value">26M</h2>
                    <p class="text-muted small">FRUTAS</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-white">
                <div class="card-body text-center">
                    <h6 class="card-title text-success">TEMPERATURA</h6>
                    <h2 class="card-value">31°C</h2>
                    <p class="text-muted small">CALOR</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção de Gráficos e Análise -->
    <div class="row g-3">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Produtividade Geral (Mensal)</h5>
                    <canvas id="productivityChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Alertas e Notificações</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Tarefas pendentes: 3</li>
                        <li class="list-group-item">Previsão de chuva para amanhã</li>
                        <li class="list-group-item">Colheita de milho agendada</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos Detalhados de Analytics -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Análise de Produtividade por Safra</h5>
                    <canvas id="yieldChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Consumo de Recursos por Cultura</h5>
                    <canvas id="resourceUsageChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Eficiência de Tarefas</h5>
                    <canvas id="efficiencyChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Previsões de Rendimento</h5>
                    <canvas id="forecastChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Temperatura Média Mensal</h5>
                    <canvas id="temperatureChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Tarefas Pendentes x Concluídas</h5>
                    <canvas id="tasksChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript para gráficos -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Produtividade Geral (Mensal)
    var ctxProductivity = document.getElementById('productivityChart').getContext('2d');
    new Chart(ctxProductivity, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
            datasets: [{
                label: 'Produtividade (toneladas)',
                data: [50, 60, 55, 70, 80, 75, 90],
                borderColor: 'rgba(75, 192, 192, 1)',
                fill: false,
            }]
        },
        options: {
            responsive: true,
        }
    });

// Gráfico de Barras para Produtividade por Safra usando os dados de tarefas
fetch('/tasks.json')
    .then(response => response.json())
    .then(tasks => {
        // Processa os dados das tarefas para agregação
        const productionData = tasks.reduce((acc, task) => {
            if (task.quantity_produced && task.crop_type) {
                acc[task.crop_type] = (acc[task.crop_type] || 0) + task.quantity_produced;
            }
            return acc;
        }, {});

        // Cria o gráfico com os dados agregados
        var ctxYield = document.getElementById('yieldChart').getContext('2d');
        new Chart(ctxYield, {
            type: 'bar',
            data: {
                labels: Object.keys(productionData),
                datasets: [{
                    label: 'Produtividade (kg)',
                    data: Object.values(productionData),
                    backgroundColor: ['#4CAF50', '#FF6384', '#36A2EB', '#FFCE56'],
                }]
            },
            options: {
                responsive: true,
            }
        });
    })
    .catch(error => console.error("Erro ao carregar os dados de produtividade:", error));



    // Consumo de Recursos por Cultura
    var ctxResourceUsage = document.getElementById('resourceUsageChart').getContext('2d');
    new Chart(ctxResourceUsage, {
        type: 'pie',
        data: {
            labels: ['Água', 'Fertilizante', 'Pesticida', 'Combustível'],
            datasets: [{
                data: [40, 30, 20, 10],
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4CAF50'],
            }]
        },
        options: {
            responsive: true,
        }
    });

    // Eficiência de Tarefas
    var ctxEfficiency = document.getElementById('efficiencyChart').getContext('2d');
    new Chart(ctxEfficiency, {
        type: 'line',
        data: {
            labels: ['Semana 1', 'Semana 2', 'Semana 3', 'Semana 4'],
            datasets: [{
                label: 'Eficiência (%)',
                data: [85, 90, 80, 95],
                borderColor: '#36A2EB',
                fill: false,
            }]
        },
        options: {
            responsive: true,
        }
    });

    // Previsões de Rendimento
    var ctxForecast = document.getElementById('forecastChart').getContext('2d');
    new Chart(ctxForecast, {
        type: 'line',
        data: {
            labels: ['Set', 'Out', 'Nov', 'Dez'],
            datasets: [{
                label: 'Previsão de Rendimento (toneladas)',
                data: [100, 120, 140, 160],
                borderColor: '#FF6384',
                fill: false,
            }]
        },
        options: {
            responsive: true,
        }
    });

    // Temperatura Média Mensal
    var ctxTemperature = document.getElementById('temperatureChart').getContext('2d');
    new Chart(ctxTemperature, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'],
            datasets: [{
                label: 'Temperatura Média (°C)',
                data: [22, 24, 27, 30, 33, 31, 28, 26],
                borderColor: '#FF5722',
                fill: false,
            }]
        },
        options: {
            responsive: true,
        }
    });

    // Tarefas Pendentes x Concluídas
    var ctxTasks = document.getElementById('tasksChart').getContext('2d');
    new Chart(ctxTasks, {
        type: 'doughnut',
        data: {
            labels: ['Pendentes', 'Concluídas'],
            datasets: [{
                data: [15, 35],
                backgroundColor: ['#FFCE56', '#4CAF50'],
            }]
        },
        options: {
            responsive: true,
        }
    });
</script>

</body>
</html>