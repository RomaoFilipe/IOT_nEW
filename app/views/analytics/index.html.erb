<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agriculture IoT Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation"></script>
</head>
<body class="bg-light">
    <div class="container py-4">
        <h1 class="text-center text-success mb-4">Agriculture IoT Dashboard</h1>

        <!-- Seção: Índice de Vegetação (NDVI) -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Índice de Vegetação Normalizado (NDVI)</h5>
                        <canvas id="ndviChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Gráfico de Previsão de Colheita -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Previsão de Colheita</h5>
                        <canvas id="harvestForecastChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Seção: Recursos e Sustentabilidade -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Uso de Água por Dia</h5>
                        <canvas id="waterUsageChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Eficiência de Energia</h5>
                        <canvas id="energyEfficiencyChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráficos Avançados de Clima e Ambiente -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Impacto Climático no Rendimento</h5>
                        <canvas id="climateImpactChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mapa de Calor do Campo</h5>
                        <canvas id="heatmapChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análise Econômica e Sustentabilidade -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">ROI por Cultura</h5>
                        <canvas id="roiChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Carbono Sequestrado</h5>
                        <canvas id="carbonSequestrationChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Gráfico NDVI
        new Chart(document.getElementById('ndviChart'), {
            type: 'line',
            data: {
                labels: ['Semana 1', 'Semana 2', 'Semana 3', 'Semana 4'],
                datasets: [{
                    label: 'NDVI',
                    data: [0.6, 0.7, 0.8, 0.85],
                    borderColor: '#4CAF50',
                    backgroundColor: 'rgba(76, 175, 80, 0.1)',
                    fill: true
                }]
            },
            options: { responsive: true }
        });

        // Gráfico de Previsão de Colheita
        new Chart(document.getElementById('harvestForecastChart'), {
            type: 'bar',
            data: {
                labels: ['Milho', 'Soja', 'Trigo', 'Arroz'],
                datasets: [{
                    label: 'Previsão (toneladas)',
                    data: [120, 95, 130, 110],
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4CAF50']
                }]
            },
            options: { responsive: true }
        });

        // Gráfico de Uso de Água
        new Chart(document.getElementById('waterUsageChart'), {
            type: 'line',
            data: {
                labels: ['01', '02', '03', '04', '05', '06', '07'],
                datasets: [{
                    label: 'Consumo (litros)',
                    data: [400, 450, 420, 500, 480, 470, 490],
                    borderColor: '#36A2EB',
                    fill: false
                }]
            },
            options: { responsive: true }
        });

        // Gráfico de Eficiência de Energia
        new Chart(document.getElementById('energyEfficiencyChart'), {
            type: 'doughnut',
            data: {
                labels: ['Painéis Solares', 'Energia Eólica', 'Rede Elétrica'],
                datasets: [{
                    data: [60, 25, 15],
                    backgroundColor: ['#FFCE56', '#4CAF50', '#36A2EB']
                }]
            },
            options: { responsive: true }
        });

        // Gráfico de Impacto Climático
        new Chart(document.getElementById('climateImpactChart'), {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr'],
                datasets: [{
                    label: 'Impacto no Rendimento (%)',
                    data: [10, -5, 15, 20],
                    backgroundColor: '#FF5722'
                }]
            },
            options: { responsive: true }
        });

        // Gráfico de ROI por Cultura
        new Chart(document.getElementById('roiChart'), {
            type: 'line',
            data: {
                labels: ['Milho', 'Soja', 'Trigo', 'Arroz'],
                datasets: [{
                    label: 'ROI (%)',
                    data: [15, 20, 18, 22],
                    borderColor: '#4CAF50',
                    fill: false
                }]
            },
            options: { responsive: true }
        });

        // Gráfico de Carbono Sequestrado
        new Chart(document.getElementById('carbonSequestrationChart'), {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr'],
                datasets: [{
                    label: 'Carbono Sequestrado (kg)',
                    data: [100, 120, 140, 160],
                    borderColor: '#36A2EB',
                    fill: false
                }]
            },
            options: { responsive: true }
        });
    </script>
</body>
</html>
